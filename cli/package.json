    "watch": "babel -wsd lib src --extensions '.js,.ts'",
    "flow": "flow",
    "test-e2e": "./scripts/tests.sh",
    "test": "yarn run test-e2e",
    "testOne": "./scripts/testOne.sh",
    "createTest": "./scripts/createTest.sh",
    "type-check": "flow && tsc --noEmit"
  },
